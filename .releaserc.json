{
  "branches": [
    "main"
  ],
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/exec",
      {
        "analyzeCommitsCmd": "echo patch"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/crypto-odoo-sync-linux-x64.tar.gz",
            "label": "crypto-odoo-sync (linux x64, tar.gz)"
          },
          {
            "path": "dist/crypto-odoo-sync-macos-universal.tar.gz",
            "label": "crypto-odoo-sync (macos universal arm64+x64, tar.gz)"
          },
          {
            "path": "dist/crypto-odoo-sync-windows-x64.zip",
            "label": "crypto-odoo-sync (windows x64, zip)"
          }
        ],
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "bun.lock"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\\n\\n${nextRelease.notes}"
      }
    ]
  ]
}
